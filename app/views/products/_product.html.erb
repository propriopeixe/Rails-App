
 <div class="col-sm-4 col-md-3">
    <div class="thumbnail">
      <%= image_tag(product.image_url, class: "img-responsive") %>
      <div class="caption">
        <h1><h1><%= product.name %></h1></h1>
        <p><%= product.description %></p>
        <p><%= product.colour %></p>
        <p>$<%= product.price %></p>
        <br>
        <p><%= link_to 'Show', product, class: "btn btn-default" %> <%= link_to 'Edit', edit_product_path(product), class: "btn btn-default" %> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></p>
      </div>
    </div>
</div>