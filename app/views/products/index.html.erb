<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <tbody>
    <% @products.each do |product| %>
      <div class="col-md-4">
        <%= image_tag(product.image_url, class: "img-responsive") %>
        <h1><%= product.name %></h1>
        <p><%= product.description %></p>
        <p><%= product.colour %></p>
        <p>$<%= product.price %></p>
        <p><%= link_to 'Show', product %> <%= link_to 'Edit', edit_product_path(product) %> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>
</table>

<br>

<%= link_to 'New Synth', new_product_path %>
</div>
